<body>
    <h1 class="mt-5 text-center">The current time and date:</h1>

@{
    DateTime now = DateTime.Now;
    <div class="datebox">
        <p class="fs-4 text-center fw-bold">@now.ToString("MMMM dd, yyyy")</p>
        <br>
        <p class="fs-4 text-center fw-bold">@now.ToString("h:mm:sss tt")</p>
    </div>
}
</body>
</html>