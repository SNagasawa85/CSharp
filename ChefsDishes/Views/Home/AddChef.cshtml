@model Chef
@{
    ViewData["Title"] = "Add a Chef";
}

<h1 class="text-center">Add a Chef!</h1>
<a href="/" class="mt-3 fs-5">Home</a>
<form asp-action="SubmitChef" asp-controller="Home" method="post" class="d-flex gap-3">
    <div class="col1">
        <label asp-for="FirstName"></label>
        <span asp-validation-for="FirstName"></span>
        <input asp-for="FirstName">
        <label asp-for="LastName" class="mt-3"></label>
        <span asp-validation-for="LastName"></span>
        <input asp-for="LastName">
    </div>
    <div class="col2">
        <label asp-for="BirthDate"></label>
        <span asp-validation-for= "BirthDate"></span>
        <input type="date" asp-for="BirthDate">
        <button type="submit" class="btn btn-outline-success mt-3">Add Chef</button>
    </div>

</form>