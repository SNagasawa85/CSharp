@model Dish
@{
    ViewData["Title"] = "Add a Dish";
}

<h1 class="text-center">Add a Dish!</h1>
<a href="/" class="mt-3 fs-5">Home</a>

<form asp-action="SubmitDish" asp-controller="Home" method="post" class="d-flex gap-3">
    <div>
        <label asp-for="Name"></label>
        <span asp-validation-for="Name"></span>
        <input asp-for="Name">
        <label asp-for="Calories"></label>
        <span asp-validation-for="Calories"></span>
        <input asp-for="Calories">
        <label asp-for="Description"></label>
        <span asp-validation-for="Description"></span>
        <input asp-for="Description">
    </div>
    <div>
        <label asp-for="ChefId"></label>
        <select asp-for="ChefId">
            @{
                @foreach(Chef one in Model.AllChefs)
                {
                    <option value="@one.ChefId">@one.FirstName @one.LastName</option>
                }
            }
        </select>
        <br>
        <button type="submit" class="btn btn-outline-success">Submit</button>
    </div>
    <div>
        <label asp-for="Tastiness"></label>
        <span asp-validation-for="Tastiness"></span>
        <select asp-for="Tastiness">
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
        </select>
    </div>
</form>